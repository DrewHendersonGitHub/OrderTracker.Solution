@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle">Order Title</label>
  <input id="orderTitle" name="orderTitle" type="text" required>
  <label for="orderDescription">Description</label>
  <input id="orderDescription" name="orderDescription" type="text">
  <label for="orderPrice">Price</label>
  <input id="orderPrice" name="orderPrice" type="number" step="0.01">
  <label for="orderDate">Date</label>
  <input id="orderDate" name="orderDate" type="text">
  <button class="btn-warning" type='submit'>Add Order?</button>
</form>