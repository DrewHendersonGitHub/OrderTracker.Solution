@{
  Layout = "_Layout";
}

<h1>Details: </h1>
<h3>Vendor: @Model["vendor"].Name</h3>

<h4>Title: @Model["order"].Title</h4>
<h4>Description: @Model["order"].Description</h4>
@if (@Model["order"].Price > 0)
{
  <h4>Price: $@Model["order"].Price</h4>
}
<h4>Date: @Model["order"].Date</h4>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a>
<a href='/vendors'>View all vendors</a>